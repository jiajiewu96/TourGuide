<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="16dp"
    tools:context=".LocationInformationActivity">

    <ImageView
        android:id="@+id/location_information_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/location_information_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/LocationInformationStyle"
        android:text="TextView" />

    <TextView
        android:id="@+id/location_information_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/LocationInformationStyle"
        android:text="TextView" />

    <TextView
        android:id="@+id/locaiton_information_description"
        style="@style/LocationInformationStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />
</LinearLayout>