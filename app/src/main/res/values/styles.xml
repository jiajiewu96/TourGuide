<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/TourGuideAppBarStyle</item>
    </style>
    <!-- App bar style -->
    <style name="TourGuideAppBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- Remove the shadow below the app bar -->
        <item name="elevation">0dp</item>
    </style>

    <!-- Style for a tab that displays a category name -->
    <style name="CategoryTab" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CategoryTabTextAppearance</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- Text appearance style for a category tab -->
    <style name="CategoryTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/location_text_color</item>
    </style>

    <!--Text appearance for category items-->
    <style name="LocationTextStyle">
        <item name="android:textColor">@color/location_text_color</item>
        <item name="android:fontFamily">@font/roboto_mono_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DateTextStyle">
        <item name="android:textColor">@color/date_color</item>
        <item name="android:fontFamily">@font/roboto_mono_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LocationInformationStyle">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/location_information_text_color</item>
    </style>

    <style name="LocationInformationStyle.LocationName">
        <item name="android:textColor">@color/location_text_color</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_mono_bold</item>
    </style>
    <style name="LocationInformationStyle.LocationInformation">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/date_color</item>
        <item name="android:fontFamily">@font/roboto_mono_light</item>
    </style>
</resources>
